@model WebUI.Models.Product
@{
    ViewBag.Title = "Delete Product";
}
<h2>Delete Product</h2>
@using (Html.BeginForm("DeleteProduct", "Product", FormMethod.Post))
{
    <input type="hidden" Name="Id" value="@Model.Id" />
    <dl>
        <dt>@Model.Name</dt>
        <dd>Do you want to delete this product?<input type="submit" value="Proceed" /></dd>
    </dl>
}


